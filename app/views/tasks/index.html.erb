<div class="container-fluid">
  <div class= "bg-success">
             <h1>タスク一覧</h1>
             <table class="table table-striped table-bordered table-hover">
                 <tr>
                      <th class="warning">タスク</th>
                      <th class="warning">詳しい説明</th>
                      <th class="warning">作成日時</th>
                      <th colspan="3",class="default"></th>
                 </tr>

                 <% @tasks.each do |task| %>
                  <tr>
                     <td><%= task.title %></td>
                     <td><%= task.content %></td>
                     <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
                     <td><%= link_to '表示',task_path(task) %></td>
                     <td><%= link_to '編集',edit_task_path(task) %></td>
                     <td><%= link_to '削除',task_path(task), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
                  </tr>
                 <% end %>
             </table>
  </div>
</div>
<div class="pull-right">
     <%= link_to '新しいタスクを登録',new_task_path %>
</div>
