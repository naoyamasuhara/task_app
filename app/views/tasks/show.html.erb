<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
<h1>タスク詳細</h1>
<div align="right"><%= link_to '一覧',tasks_path %></div>
<table class="table table-border-bottom">
  <tr>
    <th>ID</th><td><%= @task.id %></td>
  </tr>
  <tr>
    <th>名称</th><td><%= @task.title %></td>
  </tr>
  <tr>
    <th>詳しい説明</th><td><%= @task.content %></td>
  </tr>
  <tr>
    <th>登録日時</th><td><%= @task.created_at.strftime('%Y-%m-%d %X') %></td>
  </tr>
  <tr>
    <th>更新日時</th><td><%= @task.updated_at.strftime('%Y-%m-%d %X') %></td>
  </tr>
  </table>
<%= link_to '編集',edit_task_path(@task), class:"btn btn-primary" %>　 <%= link_to '削除',task_path(@task), method: :delete, data: { confirm: '本当に削除しますか？' },class:"btn btn-danger" %>