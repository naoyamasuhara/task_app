<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>

<h1>タスク詳細</h1>

<table class="table table-border-bottom">
  <tr>
    <th>名称</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>詳しい説明</th><td><%= @task.content %></td>
  </tr>
</table>
<div class="tasks__show-button">
  <%= link_to '編集',edit_task_path(@task), class:"btn btn-primary" %>　 
  <%= link_to '削除',task_path(@task), method: :delete, data: { confirm: '本当に削除しますか？' },class:"btn btn-danger" %>
</div>