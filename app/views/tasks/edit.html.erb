<h1>タスクを編集する</h1>

<%= form_for(@task) do |f| %>
    <p>
         <%= f.label :名称 %><br>
         <%= f.text_field :title %>
   </p>

   <p>
        <%= f.label :詳しい説明 %><br>
        <%= f.text_area :content %>
   </p>
   
   <p>
     <%= button_tag "更新する", class: 'btn btn-danger' %>
   </p>
<% end %>

<%= link_to '一覧に戻る',tasks_path %>