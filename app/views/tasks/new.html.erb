<h1>新しいタスク</h1>

<%= form_for :task, url: tasks_path do |f| %>
   <p>
         <%= f.label :タスク %><br>
         <%= f.text_field :title %>
   </p>

   <p>
        <%= f.label :詳しい説明 %><br>
        <%= f.text_area :content %>
   </p>

   <p>
      <%= f.submit :作成する, class:"btn btn-primary" %>
   </p>
<% end %>

<%= link_to '一覧に戻る',tasks_path %>