<h1>新しいタスク</h1>

<%= form_for :task, url: tasks_path do |f| %>
  <p>
    <%= f.label :タスク %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :詳しい説明 %><br>
    <%= f.text_area :content, class: 'form-control' %>
  </p>
  
  <p>
    <%= f.submit :作成する, class:"btn btn-primary" %>
  </p>
<% end %>

<%= link_to '一覧',tasks_path %>