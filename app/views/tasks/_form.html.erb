<%= form_for @task do |f| %>
  <p>
    <%= f.label :タスク %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :詳しい説明 %><br>
    <%= f.text_area :content, class: 'form-control tasks__form-content' %>
  </p>
  
  <p class="tasks__form-button">
    <%= f.submit :作成する, class:"btn btn-success" %>
  </p>
<% end %>